{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Clean dingoPDM"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j",
                "16",
                "BOARD=${input:boardType}"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "clean",
            "problemMatcher": ["$gcc"],
            "detail": "Build firmware"
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f", "interface/stlink.cfg",
                "-f", "target/stm32f4x.cfg",
                "-c", "adapter speed 500",
                "-c", "init; halt; stm32f4x mass_erase 0; program build/${input:boardType}.elf verify reset exit"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Flash firmware via ST-Link"
        }
    ],
    "inputs": [
        {
            "id": "boardType",
            "type": "pickString",
            "description": "Select board type",
            "options": [
                "dingopdm_v7",
                "dingopdmmax_v1",
                "dingoaux"
            ],
            "default": "dingopdm_v7"
        }
    ]
}
